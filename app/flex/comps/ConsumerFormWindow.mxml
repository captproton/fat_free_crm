<?xml version="1.0" encoding="utf-8"?>
<s:TitleWindow xmlns:fx="http://ns.adobe.com/mxml/2009"
  xmlns:s="library://ns.adobe.com/flex/spark"
  xmlns:mx="library://ns.adobe.com/flex/mx"
  close="handleCloseEvent();">
	<s:layout>
		<s:VerticalLayout/>
	</s:layout>
	
	<fx:Script>
		<![CDATA[
			import mx.managers.PopUpManager;
			
			// Handle the close button and Cancel button.
			private function handleCloseEvent():void {
				PopUpManager.removePopUp(this);
			}            
			
			// Handle the OK button.
			private function processLogin():void {
				// Check credentials (not shown) then remove pop up.
				PopUpManager.removePopUp(this);
			}
		]]>
	</fx:Script>
  <s:Group width="100%">
    <s:Label text="You can put a lot in a TitleWindow!"/>
  </s:Group>
	<mx:FormItem label="Task Name" required="true" width="100%">
		<s:TextInput id="taskName" width="250"/>
	</mx:FormItem>
	<mx:FormItem label="City" required="true" width="100%">
		<s:TextInput id="cityTI" width="100%"/>
	</mx:FormItem>
	<mx:FormItem label="Due:" required="true">
		<s:DropDownList id="dueDDL" width="150"
						prompt="Select..."/>
	</mx:FormItem>
	<mx:FormItem
		label="Assign To:">
		<s:DropDownList id="assignToDDL" width="150"
						prompt="Select..."/>
	</mx:FormItem>
	<mx:FormItem
		label="Category:">
		<s:DropDownList id="categoryDDL" width="150"
						prompt="Select..."
						enabled="{categoryDDL.dataProvider.length > 0}"/>
	</mx:FormItem>
</s:TitleWindow>
