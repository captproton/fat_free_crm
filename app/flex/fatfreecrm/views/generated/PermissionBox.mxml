<?xml version="1.0" encoding="utf-8"?>
<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" label="Permission"
  xmlns:rx="org.restfulx.components.rx.*">
  <mx:Script><![CDATA[
    import org.restfulx.Rx;
    import org.restfulx.utils.RxUtils;
    import fatfreecrm.models.Permission;
    import fatfreecrm.models.User;

    [Bindable]
    private var permission:Permission = new Permission();

    private function newPermission():void {
      permission = new Permission();
      permissionsList.selectedIndex = -1;
    }

    private function savePermission():void {
      updateModelProperties();
      if (permission.id) {
        permission.update({onSuccess: onPermissionUpdate});
      } else {
        permission.create({onSuccess: onPermissionCreate});
      }
    }
  
    private function updateModelProperties():void {
      permission.assetType = assetTypeTextInput.text;
  
      permission.user = User(userComboBox.selectedItem);
    }
   
    private function destroyPermission():void {
      permission.destroy({onSuccess: onPermissionDestroy});
    }
    
    private function onPermissionSelect():void {
      permission = RxUtils.clone(permissionsList.selectedItem) as Permission;
    }
    
    private function onPermissionCreate(result:Permission):void {
      permission = new Permission;
    }
    
    private function onPermissionUpdate(result:Permission):void {
      permissionsList.selectedItem = result;
      onPermissionSelect();
    }
    
    private function onPermissionDestroy(result:Permission):void {
      onPermissionCreate(result);
    }    
  ]]></mx:Script>
  <mx:Panel id="permissionsPanel"
    title="Permissions" cornerRadius="0" dropShadowEnabled="false" borderStyle="solid"
    borderThickness="1" backgroundColor="#EEEEEE" width="25%" height="100%">
    <mx:List id="permissionsList"
      width="100%" height="100%"
      dataProvider="{Rx.models.index(Permission)}"
      change="onPermissionSelect()"/>
    <mx:ControlBar width="100%">
      <mx:Button label="New Permission" width="100%" height="30"
        click="newPermission()"/>
    </mx:ControlBar>
  </mx:Panel>
  <mx:Panel title="Edit Permission" cornerRadius="0" dropShadowEnabled="false" borderStyle="solid"
    borderThickness="1" backgroundColor="#EEEEEE" width="75%" height="100%">
    <mx:Form width="100%" height="100%">
      <mx:FormItem label="AssetType" width="100%">
        <mx:TextInput id="assetTypeTextInput" width="100%" text="{permission.assetType}"/>
      </mx:FormItem>
      <mx:FormItem label="User" width="100%">
        <mx:ComboBox id="userComboBox" width="200"
          labelField="{User.LABEL}"
          dataProvider="{Rx.models.index(User)}" prompt="User ..."
          selectedItem="{permission.user}"/>
      </mx:FormItem>
    </mx:Form>
    <mx:ControlBar width="100%">
      <mx:Button label="Save Permission" width="50%" height="30"
        click="savePermission()"/>
      <mx:Button label="Delete Permission" width="50%" height="30"
        enabled="{RxUtils.canDeleteModel(permission)}"
        click="destroyPermission()"/>
    </mx:ControlBar>
  </mx:Panel>
</mx:HBox>