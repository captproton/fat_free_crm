        <mx:TextInput id="aimTextInput" width="100%" text="{user.aim}"/>
      </mx:FormItem>
      <mx:FormItem label="Yahoo" width="100%">
        <mx:TextInput id="yahooTextInput" width="100%" text="{user.yahoo}"/>
      </mx:FormItem>
      <mx:FormItem label="Google" width="100%">
        <mx:TextInput id="googleTextInput" width="100%" text="{user.google}"/>
      </mx:FormItem>
      <mx:FormItem label="Skype" width="100%">
        <mx:TextInput id="skypeTextInput" width="100%" text="{user.skype}"/>
      </mx:FormItem>
    </mx:Form>
    <mx:ControlBar width="100%">
      <mx:Button label="Save Profile" width="50%" height="30"
        click="saveUser()"/>
