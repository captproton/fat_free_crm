<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
	  alpha.disabled="0.5" minWidth="128" minHeight="22">

    <fx:Metadata>
    	[HostComponent("spark.components.TextInput")]
    </fx:Metadata> 
    
    <s:states>
        <s:State name="normal"/>
        <s:State name="disabled"/>
    </s:states>
        
	<s:Rect x="0.5" y="0.5" height="21" width="127" width.normal="85" id="rect1" height.normal="14" y.normal="3.5">
        <s:stroke>            
            <s:SolidColorStroke color="0x5380D0" weight="1"/>
        </s:stroke>
        <s:fill>
            <s:SolidColor color="0xFFFFFF"/>
        </s:fill>
    </s:Rect>

    <s:RichEditableText id="textDisplay" text="(Text)"	
              x="1" y="1" width="126" heightInLines="1" color="0x2b4381"
			  paddingLeft="4" paddingTop="4"
              paddingRight="4" paddingBottom="4" height.normal="14" width.normal="86" y.normal="4" fontSize.normal="9"/>
    <s:transitions>
        <s:Transition fromState="normal" toState="disabled" autoReverse="true">
            <s:Parallel>
                <s:Parallel target="{textDisplay}">
                    <s:Resize duration="0"/>
                    <s:Move autoCenterTransform="true" duration="0"/>
                </s:Parallel>
                <s:Parallel target="{rect1}">
                    <s:Resize duration="0"/>
                    <s:Move autoCenterTransform="true" duration="0"/>
                </s:Parallel>
            </s:Parallel>
        </s:Transition>
    </s:transitions>

</s:Skin>
